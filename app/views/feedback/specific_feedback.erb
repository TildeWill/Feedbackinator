<form method="post" id="addcomment" action="/feedbacks/<%= @feedback.id %>/comments">
	    <textarea id="text" type="text" cols="50" rows="4" name="content" placeholder="Type your comment here."></textarea>
	    <br>
	    <input type="submit" value="Submit">
  	</form>



  </div>